{
  // Editor:
  "editor.rulers": [80],
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.formatOnType": true,

  // Files:
  "files.associations": {
    "run": "shellscript",
    ".markdownlintignore": "properties",
    ".shellspec": "properties"
  },
  "files.watcherExclude": {
    "**/.git": true,
    "**/.history/**": true,
    "**/node_modules/**": true
  },
  "files.exclude": {
    "**/.git": true,
    "**/.history": true
  },

  // Search:
  "search.exclude": {
    "**/.git": true,
    "**/.history": true,
    "**/node_modules": true
  },

  // Shellformat:
  "shellformat.useEditorConfig": true,

  // Shellcheck:
  "shellcheck.customArgs": ["-x"],
  "shellcheck.useWorkspaceRootAsCwd": true,

  // Task explorer:
  "taskExplorer.groupSeparator": ":",
  "taskExplorer.exclude": [
    "**/.history/**",
    "**/node_modules/**",
    "**/spec/**"
  ],

  // Prettier:
  "prettier.useEditorConfig": true,

  // Comment Divider:
  "comment-divider.length": 50,

  // Markdown All in One:
  "markdown.extension.orderedList.marker": "one",

  // Override languages:
  "[dockerfile]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // VSIcons:
  "vsicons.associations.files": [
    {
      "icon": "docker",
      "extensions": ["docker-compose.dev.yml", "docker-compose.override.yml"],
      "filename": true,
      "extends": "docker"
    }
  ],

  // Spelling:
  "cSpell.words": [
    "BUILDKIT",
    "Buildx",
    "Shellcheck",
    "Shellspec",
    "devcontainer",
    "markdownlint",
    "shfmt"
  ],
  "cSpell.ignoreWords": ["aifrak", "fkirc", "koalaman"]
}
